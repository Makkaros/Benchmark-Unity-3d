function  Checker(t:int,c:int) {



		
		if(t<180 && maxPlanes>0)
		{
		Instantiate(player , spawn_pos.transform.position,spawn_pos.transform.rotation);
		maxPlanes--;
		}
		Restart();
		
}

function Restart()
	{
		yield WaitForSeconds(0.01);
		//Checker(Timer,maxPlanes);


	}	
  
